{
    "compilerOptions": {
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "vue-class-setup": ["./src/index.ts"]
        }
    },
    "exclude": ["coverage", "node_modules", "examples", "node_modules_back"]
}
